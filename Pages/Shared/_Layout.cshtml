<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Math Summaries</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MathExtraCreditUnitSummary.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Supermercado+One&amp;display=swap" rel="stylesheet" />
    <link href="/Content/css?v=m8_bwC80J8cv-SjXswyFKYFVnPDGXFUU_7sD-PI98Dk1" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">


</head>
<body id="body">
    <div style="min-height: 86vh;">
        <header>
            <nav class="navbar navbar-expand-sm navbar-light mb-3 un-inverted">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-family: 'Supermercado One', cursive; font-size: x-large; color: black;">Math Unit Summaries</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1" style="font-family: 'times new roman'">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Index" style="color: black;"><i class="bi bi-house-fill" style="padding-right: 3px; transform: translateY(-2px);"></i>Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-page="/Privacy" style="color: black;"><i class="bi bi-shield-fill-check" style="padding-right: 3px; transform: translateY(-2px);"></i>Privacy</a>
                            </li>
                        </ul>
                        <form class="d-flex">
                            <div class="form-check form-switch" id="darkmodeswitch">
                                <input class="form-check-input" type="checkbox" id="theme-toggle" name="theme-switch">
                                <label class="form-check-label" for="theme-toggle">Dark Mode</label>
                            </div>
                        </form>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year - Math3 Unit Summaries - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>